<%= form_for product do |f|%>
	<p><%= f.label :name %></p>
	<p><%= f.text_field :name %></p>
	
	<p><%= f.label :description %></p>
	<p><%= f.text_area :description %></p>
	
	<p><%= f.label :price %></p>
	<p><%= f.text_field :price %></p>
	
	<p><%= f.label :url %></p>
	<p><%= f.text_field :url %></p>
	
	<p><%= f.submit %></p>
<% end %>


