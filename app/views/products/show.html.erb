<div>
	<p><%= @product.name %></p>
	<p><%= @product.description %></p>
	<p>$<%= @product.price %>0</p>
	<%= image_tag(@product.url)%>
</div>
<%= link_to "edit", edit_product_path %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure?" }%>

<%= render :partial => "reviews/form" %>


<% @reviews.each do |review| %>
	<p><%= review.created_at %><br> <%= review.comment %></p>
	<%= link_to "Edit", edit_product_review_path(@product,review) %>
<% end %>